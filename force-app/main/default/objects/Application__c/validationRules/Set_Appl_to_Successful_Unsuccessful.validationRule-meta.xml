<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Set_Appl_to_Successful_Unsuccessful</fullName>
    <active>true</active>
    <errorConditionFormula>$User.ProfileId = "00e25000000MAdI" &amp;&amp;
(ISPICKVAL( Status__c , "Successful")  || 
ISPICKVAL( Status__c , "Unsuccessful"))</errorConditionFormula>
    <errorMessage>Only Admin Users can set an Application to Successful or Unsuccessful</errorMessage>
</ValidationRule>
