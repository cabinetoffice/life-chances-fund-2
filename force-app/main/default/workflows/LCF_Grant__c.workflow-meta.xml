<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Send_email_to_project_contact_when_grant_baseline_block_is_issued</fullName>
        <description>Send email to project contact when grant baseline block is issued</description>
        <protected>false</protected>
        <recipients>
            <field>Contact_Email__c</field>
            <type>email</type>
        </recipients>
        <senderAddress>lifechancesfund@biglotteryfund.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Community_Templates/Grant_Offer_Letter_Baseline_issued</template>
    </alerts>
    <alerts>
        <fullName>Send_email_to_project_contact_when_grant_payment_profile_is_issued</fullName>
        <description>Send email to project contact when grant payment profile is issued</description>
        <protected>false</protected>
        <recipients>
            <field>Contact_Email__c</field>
            <type>email</type>
        </recipients>
        <senderAddress>lifechancesfund@biglotteryfund.org.uk</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Community_Templates/Grant_Payment_Profile_issued</template>
    </alerts>
    <rules>
        <fullName>Offer Letter Baseline Issued</fullName>
        <actions>
            <name>Send_email_to_project_contact_when_grant_baseline_block_is_issued</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>LCF_Grant__c.bb_issue_status__c</field>
            <operation>equals</operation>
            <value>Issued</value>
        </criteriaItems>
        <description>Send email to the project contact when a Grant Offer Letter Baseline Block is issued by the Funding Officer</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Payment Profile  Issued</fullName>
        <actions>
            <name>Send_email_to_project_contact_when_grant_payment_profile_is_issued</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>LCF_Grant__c.pp_issue_status__c</field>
            <operation>equals</operation>
            <value>Issued</value>
        </criteriaItems>
        <description>Send email to the project contact when a Grant Payment Profile is issued by the Funding Officer</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
